@model SchoolManager.Site.Domain.Models.Classroom

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">@(Model.ID == 0 ? "Nova Turma" : "Edição de Turma")</h4>
</div>

@using (Html.BeginForm("Save", "Classroom", FormMethod.Post))
{
    <div class="modal-body">
        <div class="alert alert-danger" @if (Html.ViewData.ModelState.IsValid)
                                        { <text>style="display:none"</text>}>
            @Html.ValidationSummary()
        </div>

        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <label>Escola</label>
            @Html.DropDownListFor(model => model.CollegeID, (SelectList)ViewBag.Colleges, "----- Selecione -----", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Ano de Graduação</label>
            @Html.TextBoxFor(model => model.GraduationYear, new { @class = "form-control", @placeholder = "Ano de graduação", @type = "number", @onkeypress = "return isNumberKey(event);" })
        </div>

        <div class="form-group">
            <label>Número de Estudantes</label>
            @Html.TextBoxFor(model => model.Students, new { @class = "form-control", @placeholder = "Número de estudantes", @type = "number", @onkeypress = "return isNumberKey(event);" })
        </div>

        <div class="form-group">
            <label>Coordenador</label>
            @Html.TextBoxFor(model => model.Coordinator, new { @class = "form-control", @placeholder = "Coordenador", @maxlength = 50 })
        </div>

        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(model => model.Email, new { @Class = "form-control", @placeholder = "Email", @type = "email", @maxlength = 100 })
        </div>

        <div class="form-group">
            <label>Período</label>
            @Html.TextBoxFor(model => model.Period, new { @class = "form-control", @placeholder = "Período", @maxlength = 1 })
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
}
