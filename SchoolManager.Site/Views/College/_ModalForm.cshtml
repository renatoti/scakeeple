@model SchoolManager.Site.Domain.Models.College

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">@(Model.ID == 0 ? "Nova Escola" : "Edição de Escola")</h4>
</div>

@using (Html.BeginForm("Save", "College", FormMethod.Post))
{
    <div class="modal-body">
        <div class="ajax-loader"></div>
        <div class="alert alert-danger" @if (Html.ViewData.ModelState.IsValid)
                                        { <text>style="display:none"</text>}>
            @Html.ValidationSummary()
        </div>

        @Html.HiddenFor(model => model.ID)
        
        <div class="form-group">
            <label>Nome</label>
            @Html.TextBoxFor(model => model.Name, new { @class="form-control", @placeholder = "Nome", @maxlength = 50 })
        </div>
            
        <div class="form-group">
            <label>Endereço</label>
            @Html.TextBoxFor(model => model.Adress, new { @class="form-control", @placeholder = "Endereço", @maxlength = 80 })
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
}

